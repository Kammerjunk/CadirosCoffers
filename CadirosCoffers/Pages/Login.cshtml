@page

@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <script type="module" src="~/js/login.js"></script>
}

<div id="loginBox" class="mx-auto mt-5 pt-5" tabindex="-1" role="dialog" aria-labelledBy="loginModalLabel" aria-hidden="true">
    <div class="dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="loginModalLabel" class="modal-title">Login</h5>
            </div>
            <form id="formLogin" data-route="@Url.Page("Login")">
                <div class="modal-body pb-3">
                    <div class="row">
                        <div class="col">
                            <input id="inputUsername" type="text" class="form-control" placeholder="Username" />
                        </div>
                        <div class="col">
                            <input id="inputPassword" type="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnLogin" type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>